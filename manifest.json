{
  "manifest_version": 2,
  "name": "Adaptive Stream Detector",
  "version": "1.0",
  "description": "Detects streaming URLs (HLS, MPEG-DASH, Smooth Streaming) and displays them for easy copying",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "storage",
    "notifications",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Adaptive Stream Detector",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
