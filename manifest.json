{
  "manifest_version": 2,
  "name": "Stream Sniper",
  "version": "1.0",
  "description": "Stream Sniper - Detect, preview, and capture streaming URLs (HLS, MPEG-DASH, Smooth Streaming) with live playback",

  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "storage",
    "notifications",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Stream Sniper",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
